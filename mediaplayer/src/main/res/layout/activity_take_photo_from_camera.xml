<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ua.com.igorka.oa.android.mediaplayer.TakePhotoFromCameraActivity">

    <ImageView
        android:id="@+id/imageview_photo"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <Button
        android:id="@+id/button_take_photo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/imageview_photo"
        android:text="takePhoto"/>
    <Button
        android:id="@+id/button_take_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/button_take_photo"
        android:text="takeThumbnail"/>


</RelativeLayout>
